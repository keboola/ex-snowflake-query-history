{
  "name": "keboola/snowflake-query-history",
  "description": "Snowflake Query History Extractor",
  "license": "MIT",
  "type": "project",
  "require": {
    "php": ">=8.4",
    "keboola/php-component": "^10.0",
    "keboola/db-adapter-snowflake": "^1.5",
    "keboola/csv": "^4.1"
  },
  "autoload": {
    "psr-4": {
      "Keboola\\SnowflakeQueryHistory\\": "src/Keboola/SnowflakeQueryHistory/"
    }
  },
  "scripts": {
    "tests": "phpunit --debug --colors=always",
    "phpcs": "phpcs --standard=psr2 --ignore=vendor -n .",
    "phpstan": "phpstan analyse --no-progress --level=max -c ./phpstan.neon ./src",
    "build": [
      "@phpcs",
      "@phpstan",
      "@tests"
    ],
    "ci": [
      "@composer validate --no-check-publish --no-check-all",
      "@build"
    ]
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-symfony": "^2.0"
  }
}
